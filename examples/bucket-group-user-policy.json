{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:*"
            ],
            "Resource": [
                "arn:aws:s3:::local-test-*",
                "arn:aws:s3:::local-test-*/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "admin:ListServiceAccounts",
                "admin:UpdateServiceAccount"
            ]
        }
    ]
}
