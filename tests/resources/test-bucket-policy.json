{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowRootAndHomeListingOfTestBucket",
            "Principal": {
                "AWS": [
                    "arn:aws:iam:::test-service-account"
                ]
            },
            "Effect": "Allow",
            "Action": ["s3:ListBucket"],
            "Resource": ["arn:aws:s3:::test-bucket"]
        }
    ]
}
